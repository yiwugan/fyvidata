#include <ansi.h>
#include <weapon.h>
void create()
{
        set_name( COR "数量监察员" NOR, ({ "unique" }) );
        set_weight(3000);
        if( clonep() )
                set_default_object(__FILE__);
        else {
                set("unit", "柄");
                set("no_drop",1);
                set("no_get",1);
                set("timestamp","STAMP");
                set("owner","system");
                set("rigidity",200);
                set("material", "iron");
                set("long", "非礼勿视。\n");
        }
}
int save()
{
        string file;
        string equipped;
        int result;
        if( stringp(file = "/data/item/unique/counter.o") ) {
                assure_file(file);
                result = save_object(file,1);
                return result;
        }
        return 0;
}
int restore()
{
        string file;
        if( stringp(file = "/data/item/unique/counter.o") )
        if(restore_object(file))
        {
                set_weight(200);
                return 1;
        }
        return 0;
}
